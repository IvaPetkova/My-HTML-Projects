.forecast-data-component
	width: 100%
	.header
		color: #fff
		text-align: center
		text-shadow: 1px 2px 5px rgba(0, 0, 0, 0.45)
		font-size: 2rem
		margin: 50px 0
	.content
		display: flex
		justify-content: center
		.weather-container
			padding: 10px
			border-radius: 5px
			background-color: rgba(255, 255, 255, 0.1)
			border: 1px solid rgba(255, 255, 255, 0.1)
			box-shadow: 2px 2px 0px 2px rgba(255, 255, 255, 0.15)
			text-align: center
			cursor: pointer
			.icon
				vertical-align: middle
			&:hover
				background-color: rgba(0, 0, 0, 0.0)
				box-shadow: 2px 2px 15px rgba(255, 255, 255, 0.3)
			.small_val
				display: block
				clear: left
				font-size: 0.8rem
			.grey
				color: #fff