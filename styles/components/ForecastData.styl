.forecast-data-component
	.header
		color: #fff
		text-align: center
		text-shadow: 1px 2px 5px #666
		font-size: 2rem
		margin: 50px 0
	.weather-container
		padding: 10px
		border-radius: 5px
		box-shadow: 0px 1px 3px #808080
		text-align: center
		.icon
			vertical-align: middle
		&:hover
			cursor: pointer
			box-shadow: 2px 2px 7px #808080
		.small_val
			display: block
			clear: left
			font-size: 0.8rem
		.grey
			color: #fff