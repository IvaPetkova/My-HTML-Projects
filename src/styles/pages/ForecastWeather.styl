.forecast-weather-container
	height: 100%
	width: 100%
	display: none
	flex-direction: column-reverse
	align-items: center
	justify-content: space-around
	opacity: 0
	.forecast-weather
		display: grid
		grid-column-gap: 25px
		grid-row-gap: 15px
		padding: 25px 40px
		font-size: 1.2rem
		font-family: cursive
		text-align: center
		color: #d6d6d6
		overflow: auto
		margin-bottom: 40px
		width: 100%
		justify-content: center
		.day
			display: flex
			flex-direction: column
			align-items: center
			justify-content: space-around
			padding: 13px 15px 10px 15px
			background: rgba(160, 158, 151, 0.1)
			box-shadow: inset 0 0 10px 4px rgba(0,0,0,0.05)
			border-radius: 5px
			span
				margin-bottom: 8px
			.date
				font-size: 1rem
			.city-name
				margin-bottom: 8px
				font-size: 1.4rem
			.temp
				font-size: 1.5rem
			.country
				font-size: 1.2rem
			.condition-text
				margin-top: -9px
	&.show
		opacity: 1
		transition: opacity .3s
		display: flex

	@media (max-height: 500px)
		.forecast-weather
			padding: 10px 40px
			margin-bottom: 0
			.day
				span
					margin-bottom: 6px

	@media (min-width: 540px)
		.forecast-weather
			grid-template-columns: repeat(2, 44%)

	@media (min-width: 760px)
		.forecast-weather
			grid-template-columns: repeat(3, 32%)
			height: 76%

	@media (min-width: 1024px)
		.forecast-weather
			grid-template-columns: repeat(7, 12%)
			height: 55%
			padding: 15px 40px
			font-size: 1rem

	@media (min-width: 1370px)
		.forecast-weather
			height: 65%
