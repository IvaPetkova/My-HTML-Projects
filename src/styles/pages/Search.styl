.search-container
	.search
		display: flex
		flex-direction: column
		align-items: center
		.img-container
			width: 100%
			img
				opacity: 0.5
				box-shadow: 0 35px 70px rgba(0,0,0, 0.57)
		.input-container
			padding-top: 120px
			display: flex
			flex-direction: column
			input[type=text]
				width: 366px
				height: 32px
				border-radius: 4px
				border: none
				background: #ccc
				box-shadow: 2px 2px 10px rgba(0,0,0, 0.3)
		.btn
			background: alpha(#000, 0.03)
			margin-top: 60px
			max-width: 200px
			padding: 10px 20px
			font-size: 26px
			border-radius: 4px
			border: 1px solid #b9b9b9
			cursor: pointer
			color: #333
			&:hover
				background: alpha(#000, 0.09)
			&.disabled
				opacity: 0.4
				cursor: default
				background: alpha(#000, 0.03)
