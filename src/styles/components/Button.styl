.btn
	background: rgba(0,0,0,0.03)
	max-width: 200px
	padding: 10px 20px
	font-size: 24px
	border-radius: 4px
	border: 1px solid rgba(185, 185, 185, 0.44)
	cursor: pointer
	color: #383641
	user-select: none
	opacity: 1
	transition: all 0.3s
	&:hover
		background: rgba(0,0,0,0.04)
		box-shadow: 3px 3px 12px rgba(0,0,0,0.19)
		border: 1px solid rgba(0, 0, 0, 0)
	&.disabled
		opacity: 0.4
		cursor: default
		background: rgba(0,0,0,0.03)
		border: 1px solid rgba(185,185,185,0.44)
		box-shadow: none
