.search-component
	margin: 90px 0
	.search-area
		padding-bottom: 100px
		display: flex
		flex-direction: column
	.search-area input[type=text]
		width: 366px
		height: 32px
	.search-area label
		font-size: 13px
		color: #444
	.btn
		margin: auto
		max-width: 200px
		padding: 10px 0
		display: flex
		justify-content: center
		font-size: 26px
		border-radius: 4px
		border: 1px solid #b9b9b9
		cursor: pointer
		color: #222
		&:hover
			background: rgba(0, 0, 0, 0.12)