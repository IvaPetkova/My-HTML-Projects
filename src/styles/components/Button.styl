.button-container
	margin: 30px 0
	.btn
		background: rgba(0,0,0,0.03)
		padding: 10px 20px
		font-size: 1.25rem
		border-radius: 4px
		border: 1px solid rgba(185, 185, 185, 0.44)
		cursor: pointer
		color: #d2d2d2
		user-select: none
		opacity: 1
		transition: all 0.3s
		&:hover
			background: rgba(0,0,0,0.04)
			box-shadow: 3px 3px 12px rgba(0,0,0,0.19)
			border: 1px solid rgba(0, 0, 0, 0)
		&.disabled
			opacity: 0.4
			cursor: default
			background: rgba(0,0,0,0.03)
			border: 1px solid rgba(185,185,185,0.44)
			box-shadow: none
	@media (max-height: 500px)
		margin: 10px 0
		.btn
			font-size: 0.9rem
