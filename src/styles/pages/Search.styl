.search-container
	.search
		display: flex
		flex-direction: column
		align-items: center
		.img-container
			width: 100%
			img
				opacity: 0.5
				box-shadow: 0 35px 70px rgba(0,0,0, 0.57)
		.input-container
			margin-top: 120px
			display: flex
			flex-direction: column
			input[type=text]
				width: 360px
				padding: 10px
				border-radius: 4px
				border: 1px solid rgba(0,0,0,0)
				background: #ccc
				transition: all 0.3s
				box-shadow: 2px 2px 10px rgba(0,0,0, 0.3)
				&:hover,
				&:focus
					box-shadow: 3px 4px 16px rgba(0,0,0,0.49)
				&:focus
					border: 1px solid rgba(0,0,0,0.3)
		.btn
			background: rgba(0,0,0,0.03)
			margin-top: 60px
			max-width: 200px
			padding: 10px 20px
			font-size: 26px
			border-radius: 4px
			border: 1px solid rgba(185, 185, 185, 0.44)
			cursor: pointer
			color: #383641
			user-select: none
			opacity: 1
			transition: all 0.3s
			&:hover
				background: rgba(0,0,0,0.04)
				box-shadow: 3px 3px 12px rgba(0,0,0,0.19)
				border: none
			&.disabled
				opacity: 0.4
				cursor: default
				background: rgba(0,0,0,0.03)
				border: 1px solid rgba(185,185,185,0.44)
				box-shadow: none
