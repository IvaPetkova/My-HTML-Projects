.search-container
	text-align: center
	.input-container
		margin-top: 80px
		input[type=text]
			width: 360px
			padding: 10px
			border-radius: 4px
			border: 1px solid rgba(0,0,0,0)
			background: #ccc
			transition: all 0.3s
			box-shadow: 2px 2px 10px rgba(0,0,0, 0.3)
			&:hover,
			&:focus
				box-shadow: 3px 4px 16px rgba(0,0,0,0.49)
			&:focus
				border: 1px solid rgba(0,0,0,0.3)
	.button-container
		margin: 60px auto 0
		width: fit-content
		.btn
			text-align: center
